<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:id="@+id/post_likes"
            android:gravity="left|center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/post_like"
            android:layout_above="@+id/post_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 20,00"
                android:id="@+id/post_price"
                android:textColor="#026700"
                android:gravity="center|right"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/post_title"/>

            <ToggleButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/post_like"
                android:elegantTextHeight="false"
                android:background="@drawable/selector_like"
                android:textOff=" "
                android:textOn=" "
                android:layout_marginLeft="10dp"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/post_desc"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_below="@+id/post_title"
                android:layout_alignStart="@+id/post_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/post_time"
                android:layout_below="@+id/post_brands"
                android:layout_alignStart="@+id/post_brands"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="543"
                android:drawableLeft="@drawable/ic_action_eye_open"
                android:id="@+id/post_views"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/post_time"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/post_brands"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/post_desc"
                android:layout_alignStart="@+id/post_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/post_title"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@+id/post_like"
                android:layout_alignStart="@+id/post_like"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
